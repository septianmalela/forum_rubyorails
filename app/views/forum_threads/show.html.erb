<div class="row">
	<div class="col-md-6 col-md-offset-3">

		<div class="thread">
			<h4> <%= @threads.title.titleize %> </h4>
			<div class="meta">
				<%= I18n.l(@threads.created_at.to_date) %> oleh <%= @threads.user.name %>
			</div>

			<div class="content">
				<%= @threads.content %>
			</div>
		</div>

		<% if @threads.forum_posts.any? %>
		<% @threads.forum_posts.each do |p| %>

		<div class="thread">
			<div class="meta">
				<%= I18n.l(p.created_at.to_date) %> oleh <%= p.user.name %>
			</div>

			<div class="content">
				<%= p.content %>
			</div>
		</div>

		<% end %>
		<% else %>
		<div class="text">
			<h5>Jadilah yang memulai tanggapan pertama</h5>
		</div>

		<% end %>

		<%= form_for [@threads, @post] do |f| %>

			<div class="form-group">
				<%= f.label :content %>
				<%= f.text_area :content, rows: 10, class: 'form-control' %>
			</div><br>

		<div class="form-group">
			<%= f.submit "Buat", class: 'btn btn-primary form-control' %>
		</div>

		<% end %>

	</div>
</div>