<%= form_for(current_user) do |edit| %><br>

	<%= edit.text_field :name, class: 'form-control col-4' %><br><br>

	<% if current_user.avatar.url.present? %>
		<%= image_tag(current_user.avatar.url) %>
			<%= edit.label :remove_avatar do %>
			<% end %>
		<% end %>
	<%= edit.file_field :avatar, class: 'form-control' %>
	<%= edit.hidden_field :avatar_cache %><br><br>

	<%= edit.submit "Save" %>

<% end %>